{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable",
      "es2015.promise",
      "es2019"
    ],
    "typeRoots": [
      "../typings/**/*",
      "src/typings/**/*"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "./**/__test__"
  ],
}